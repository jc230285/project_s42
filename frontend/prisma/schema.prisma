generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model User {
  id         Int      @id @default(autoincrement())
  name       String?
  email      String   @unique
  password   String?
  created_at DateTime @default(now()) @map("created_at")
  last_login DateTime? @map("last_login")
  group_id   Int?     @map("group_id")
  group      Group?   @relation(fields: [group_id], references: [id])
  nocodb_api String?  @map("nocodb_api")
  nocodbapi  String?  @map("nocodbapi")

  @@map("users")
}

model Group {
  id         Int      @id @default(autoincrement())
  name       String
  domain     String?  @unique
  created_at DateTime @default(now()) @map("created_at")
  users      User[]

  @@map("groups")
}
